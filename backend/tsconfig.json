{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    //  Alias mapping
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@entities/*": ["entities/*"],
      "@middleware/*": ["middleware/*"],
      "@module/*": ["module/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
