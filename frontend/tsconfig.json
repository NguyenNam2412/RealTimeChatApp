{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,                    
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,                    
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,                    
    "jsx": "react-jsx",
    
    //  Alias mapping
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@helpers/*": ["helpers/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@routes/*": ["routes/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}